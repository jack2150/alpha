{% extends "JackImportBundle::layout.html.twig" %}

{% block title %}Import Bundle: Event: Add Event{% endblock %}

{% block head %}
    <link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}"/>
    <link rel="stylesheet" href="{{ asset('bundles/acmedemo/css/demo.css') }}"/>
    <style>
        .event {
            width: 80%;
        }

        .event td {
            padding: 2px;
        }

        .event .first {
            width: 70px;
        }

        .event .context {
            width: 200px;
        }

        .notice {
            color: green;
            line-break:;
            line-height: 2em;
        }

        .error2 {
            color: red;
            line-break:;
            line-height: 2em;
        }
    </style>
{% endblock %}

{% block content %}
    <h2 style="background-color: darkcyan">Add Event:</h2>

    {% if notice %}
        <div class="notice" style="padding-left: 4px;">
            <b>(SUCCESS) </b>
            {{ notice }}
        </div>
    {% endif %}

    {% if error %}
        <div class="error2" style="padding-left: 4px;">
            <b style="color: red">(WARNING) </b>
            {{ error }}
        </div>
    {% endif %}

    {{ form_start(form) }}
    {{ form_errors(form) }}

    <table class="event">
        <tr>
            <td class="first">
                {{ form_label(form.date, 'Event Date: ') }}
            </td>
            <td>
                {{ form_errors(form.date) }}
                {{ form_widget(form.date) }}
            </td>

        </tr>
        <tr>
            <td>
                {{ form_label(form.name, 'Event Type: ') }}
            </td>
            <td>
                {{ form_errors(form.name) }}
                {{ form_widget(form.name) }}
            </td>
        </tr>
        <tr>
            <td>
                {{ form_label(form.context, 'Description: ') }}
            </td>

            <td>
                {{ form_errors(form.context) }}
                {{ form_widget(form.context, {'attr': {'class': 'context' }}) }}
            </td>
        </tr>
        <tr>
            <td>
                {{ form_widget(form.symbol) }}
                {{ form_widget(form.save) }}
            </td>
        </tr>
    </table>

    {{ form_end(form) }}

{% endblock %}
