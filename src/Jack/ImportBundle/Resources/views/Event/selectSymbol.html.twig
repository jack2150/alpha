{% extends "JackDefaultBundle::layout.html.twig" %}

{% block title %}Import Bundle: Event: Select Symbol{% endblock %}

{% block content %}

    <h3><span class="glyphicon glyphicon-calendar"></span> Manage Events</h3>

    {{ form_start(form, {'attr': {'class': 'form-inline', 'role': 'form' }}) }}
    {{ form_errors(form) }}

    <div class="panel panel-primary">
        <div class="panel-heading"><b>Form</b></div>
        <div class="panel-body">
            <div class="row">

                <div class="col-md-2">
                    <blockquote>
                        <p>Please select:</p>
                    </blockquote>
                </div>

                <div class="col-md-2">
                    <div class="form-group">
                        {{ form_label(form.symbol, 'Symbol Name:') }}
                        {{ form_errors(form.symbol) }}
                        {{ form_widget(form.symbol,
                        {'attr': {'class': 'form-control', 'placeholder': '.col-md-2' }} ) }}
                    </div>
                </div>

                <div class="col-md-2">
                    <div class="form-group">
                        {{ form_label(form.action, 'For: ') }}
                        {{ form_errors(form.action) }}
                        {{ form_widget(form.action,
                        {'attr': {'class': 'form-control', 'placeholder': '.col-md-2' }} ) }}
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <div><label>&nbsp;</label></div>
                        {{ form_widget(form.continue,
                        {'attr': {'class': 'btn btn-primary' }}) }}
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-2">
                    <span class="help-block">
                        ** Latest import
                    </span>
                </div>
            </div>
        </div>
    </div>


    {{ form_end(form) }}


{% endblock %}
