{% extends "JackDefaultBundle::layout.html.twig" %}

{% block head %}
    <link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}"/>

    <link rel="stylesheet" href="{{ asset('bundles/bootstrap/css/datepicker.css') }}"/>


{% endblock %}

{% block extra_footer %}
    <script>
        var from_date = $("#form_from_date").val();
        var to_date = $("#form_to_date").val();

        $('#form_date').datepicker({
            format: 'yyyy-mm-dd',
            startDate: from_date,
            endDate: to_date
        });

        $('#form_periodEnding').datepicker({
            format: 'yyyy-mm-dd',
            startView: 1
        });

    </script>
{% endblock %}
