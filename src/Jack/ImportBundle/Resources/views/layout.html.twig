{% extends "JackDefaultBundle::layout.html.twig" %}

{% block head %}
    <link rel="stylesheet" href="{{ asset('bundles/bootstrap/css/datepicker.css') }}"/>
{% endblock %}

{% block extra_footer %}
    <script>
        var from_date = $("#form_from_date").val();
        var to_date = $("#form_to_date").val();

        $('#form_date').datepicker({
            format: 'yyyy-mm-dd',
            startDate: from_date,
            endDate: to_date
        });
    </script>
{% endblock %}
